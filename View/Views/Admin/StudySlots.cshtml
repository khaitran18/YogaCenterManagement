                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Day)
                    </th>
                    @*<th>Action</th>*@
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {

                    @foreach (var item in Model)
                    {
                        <tr data-item="@JsonConvert.SerializeObject(item)">
                            <td>
                                @Html.DisplayFor(modelItem => item.SlotId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndTime)
                            </td>
                            <td>
                                @foreach (var dayModel in item.Day)
                                {
                                    <div>@dayModel.Day</div>
                                }
                            </td>
                            <td>
                                    @*<button class="p-r-10 edit-button" style="font-size:1.5rem"><i class="fas fa-edit"></i></button>*@
                                    <button data-toggle="modal" data-target="#deleteModal" class="p-r-10 delete-button" style="font-size:1.5rem"><i class="fas fa-trash-alt"></i></button>
                                </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
