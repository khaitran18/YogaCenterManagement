@section TimePicker {
    <script src="~/js/TimePicker.js"></script>
    <script>
        $(document).ready(function () {
            $('.delete-button').click(function () {
                var row = $(this).closest('tr');
                var slotId = row.find('td:eq(0)').text().trim();
                var startTime = row.find('td:eq(1)').html();
                var endTime = row.find('td:eq(2)').html();
                var daysHtml = row.find('td:eq(3)').html();

                // Clear the days list in the modal
                $('#deleteModal').find('#daysList').empty();

                // Loop through each div element inside the daysHtml variable and append it to the days list in the modal
                $(daysHtml).each(function () {
                    var day = $(this).text();
                    $('#deleteModal').find('#daysList').append('<div>' + day + '</div>');
                });

                // Set the slot ID, start time, and end time in the modal
                $('#deleteModal').find('#slotId').val(slotId);
                $('#deleteModal').find('#startTime').html(startTime);
                $('#deleteModal').find('#endTime').html(endTime);
            });
        });
        //Edit button
        $('.edit-button').click(function () {
            var $row = $(this).closest('tr');
            var item = $row.data('item');
            var startTime = item.StartTime;
            var endTime = item.EndTime;
            var slotId = item.SlotId;

            // Fill the modal with initial values
            $('#updateModal').find('#start').val(startTime);
            $('#updateModal').find('#end').val(endTime);
            $('#updateModal').find('#slotId').val(slotId);

            var days = item.Day.map(function (dayModel) {
                return dayModel.DayId;
            });

            // Set the checked state of checkboxes
            $('.day-checkbox').each(function () {
                var dayValue = parseInt($(this).val());
                var isChecked = days.includes(dayValue);
                $(this).prop('checked', isChecked);
            });

            // Show the modal
            $('#updateModal').modal('show');
        });
    </script>

}

